                <ImageButton
                    android:id="@+id/LikeButtonLisa"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/paylasimResmi"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like_before" />

                <ImageView
                    android:id="@+id/paylasimResmi"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/aciklama"

                    android:background="@drawable/blackpinkkonser"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@id/LikeButtonLisa"
                    android:text="-------------------------------------------------------------------------------------------------"
                    ></TextView>

            </RelativeLayout>












            <!--içerik-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/fermanicerik"
                android:layout_height="match_parent"
                android:layout_below="@+id/lisaicerik">





                <ImageView
                    android:id="@+id/fermanFoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ferman" />

                <TextView
                    android:id="@+id/usernameFerman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fermanFoto"
                    android:text="default"

                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/timeTextFerman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameFerman"
                    android:layout_toRightOf="@id/fermanFoto"
                    android:text="17 dk önce"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/aciklamaFerman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fermanFoto"
                    android:layout_marginBottom="5dp"
                    android:text="Bir kadın çizecekmişim"
                    android:textColor="@color/white"></TextView>

                <ImageButton
                    android:id="@+id/LikeButtonFerman"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/paylasimResmiFerman"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like_before" />

                <ImageView
                    android:id="@+id/paylasimResmiFerman"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/aciklamaFerman"

                    android:background="@drawable/ferman_konser"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@id/LikeButtonFerman"
                    android:text="-------------------------------------------------------------------------------------------------"
                    ></TextView>

            </RelativeLayout>







            <!--içerik-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fermanicerik">


                <ImageView
                    android:id="@+id/ronaldoFoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ronaldo1" />

                <TextView
                    android:id="@+id/usernameRonaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ronaldoFoto"
                    android:text="default"

                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/timeTextRonaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameRonaldo"
                    android:layout_toRightOf="@id/ronaldoFoto"
                    android:text="29 dk önce"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/aciklamaRonaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ronaldoFoto"
                    android:layout_marginBottom="5dp"
                    android:text="Katar'da yapılacak olan kendi çapımızdaki maçımıza sizi de bekliyoruz"
                    android:textColor="@color/white"></TextView>



                <ImageButton
                    android:id="@+id/LikeButtonRonaldo"


                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/paylasimResmiRonaldo"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like_before" />

                <ImageView
                    android:id="@+id/paylasimResmiRonaldo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/aciklamaRonaldo"

                    android:background="@drawable/katar"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_below="@id/LikeButtonRonaldo"
                    android:text="-------------------------------------------------------------------------------------------------"
                    ></TextView>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>