<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/enbuyuk"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            tools:ignore="ExtraText">


            <!--içerik-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/lisaicerik"
                android:layout_height="match_parent"


                >


                <ImageView
                    android:id="@+id/lisaFoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/lisa1" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lisaFoto"
                    android:text="default"

                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username"
                    android:layout_toRightOf="@id/lisaFoto"
                    android:text="13 dk önce"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/aciklama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lisaFoto"
                    android:layout_marginBottom="5dp"
                    android:text="Hi from Seul"
                    android:textColor="@color/white"></TextView>


